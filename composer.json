{
	"name": "mafeljohncahucom/handy-customizer",
	"description": "Handy Customizer is an open-source WordPress toolkit build for WordPress Theme Developer to develop theme using WordPress Customizer API while writing clean and minimal code only.",
	"type": "wordpress-plugin",
	"license": "GPL-3.0-or-later",
	"authors": [
		{
			"name": "Mafel John Cahucom",
			"email": "mafeljohn.timkang.cahucom070596@gmail.com",
			"role": "Developer"
		}
	],
	"support": {
		"source": "https://github.com/mafelcahucom/handy-customizer/",
		"docs": "https://github.com/mafelcahucom/handy-customizer/blob/master/README.md"
	},
	"require": {
		"php": ">=8.0.0"
	},
	"require-dev": {
		"wp-coding-standards/wpcs": "^3.0",
		"phpcompatibility/phpcompatibility-wp": "^2.1.5",
		"phpunit/phpunit": "11"
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	},
	"autoload": {
		"psr-4": {
			"Handy\\" : "app/"
		}
	}
}

